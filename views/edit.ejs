<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> </div>
    <form class="ui form"action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" placeholder="Title" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
        <label>Image</label>
        <input type="url" placeholder="Image URL" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="field">
        <label>Blog Content</label>
        <textarea placeholder="Content goes here..." name="blog[body]" required><%= blog.body %></textarea>
    </div>
    <input class="ui blue big basic button" type="submit">
</form>
</div>


<% include partials/footer %>